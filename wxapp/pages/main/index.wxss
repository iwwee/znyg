.bg{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.notice{
	position: relative;
	margin-left: 5%;
	width: 90%;
	height: 100%;
}

.notice-item{
	margin-top: 50rpx;
	height: 300rpx;
	width: 100%;
	border-radius: 45px 0 45px;
	overflow: hidden;
}

.F{
	border-radius: 0 45px 0;
}

.F .notice-header:after{
	right: 30rpx;
}

.notice-header{
	padding-left: 22.5px;
	font-size: 45rpx;
	line-height: 90rpx;
	height: 90rpx;
	color: #fff;
	z-index: 999;
	width: 100%;
	background: #000;
	opacity: 0.8;
}

.notice-header:after
{ 
	content:"三";
	position:absolute;
	right:20rpx;
	color:#fff;
	font-weight:bold;
}

.notice-body{
	z-index: 999;
	padding: 15rpx 20rpx 0 15rpx;
	font-size: 35rpx;
	height: 210rpx;
	/*width: 100%;*/
	background: #000;
	opacity: 0.5;
	color: #fff;
	/*height: 210rpx;*/
}

.footer{
	position: fixed;
	bottom: 100rpx;
	height:200rpx;
	font-size: 40rpx;
	/*background:red;*/
	width: 100%;
}

.footer-items{
	position: absolute;
	bottom: 0;
	/*background: blue;*/
	height: 100%;
	width: 500rpx;
	margin-left: -250rpx;
	left: 50%;
}

.footer-item{
	width: 100rpx;
	/*background: green;*/
	height: 100%;
	position: absolute;
	line-height: 100rpx;
	background: #CC9900;
	border-radius: 90px;
	box-shadow: 10rpx 10rpx 5rpx #888888;
	opacity: 0.7;
}

.footer-item image{
	padding: 10%;
	height: 80%;
	width: 80%;
}

.footer-left{
	height: 50%;
	margin-top: 12.5%;
}

.footer-mid{
	left: 50%;
	margin-left: -102.5rpx;
	width: 200rpx;
	font-size: 120rpx;
	text-align: center;
	line-height: 200rpx;
	background: #33CC00;
	border-radius: 90px;
	box-shadow: 10rpx 10rpx 5rpx #888888;
	opacity: 0.7;
	/*color: #fff;*/
}

.footer-right{
	height: 50%;
	right: 0px;
	margin-top: 12.5%;
}