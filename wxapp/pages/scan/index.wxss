}

.page{
	width:100%;
	height:100%;
	background: #333333;
}

.tips{
	position: absolute;
	left: 50%;
	height: 50%;
	margin:  -400rpx auto auto -300rpx;
	width: 600rpx;
	height: 800rpx;
	background: #FFCCCC;
	top: 50%;
	border-radius: 15px;
	overflow: hidden;
}

.tips-title{
	text-align: center;
	width: 600rpx;
	height: 200rpx;
	line-height: 200rpx;
	font-size: 100rpx;
	background: red;
}

.tips-body{
	margin-top: 60rpx;
	text-indent:2em;
	font-size: 60rpx;
	color:#000;
}

.tips-submit{
	position: absolute;
	bottom: 80rpx;
	left: 50%;
	margin-left: -200rpx;
	text-align: center;
	width: 400rpx;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 60rpx;
	background: red;
	border-radius: 90px;
}